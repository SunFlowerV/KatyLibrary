@model List<KatyLibrary.Models.Author>
@{
    ViewData["Title"] = "Авторы";
}
@{
    int a;
}
<h1>Авторы</h1>
@for (int i = 0; i < Model.Count() - 1; i = i + 4)
{
<div class="row">
    @if (Model.Count() - 1 <= 3)
    {
        a = Model.Count() - 1;
    }
    else
    {
        a = i + 3;
    }
    @for (int l = i; l <= a; l++)
    {
        @if (Model[l] != null)
        {
            <div class="col-lg-3 col-sm-6 card">
                <img class=".img-thumbnail img-fluid mx-auto d-block card-img-top" src="@Model[l].Foto" />
                <div class="card-body ">
                    <h4>@Model[l].Name</h4>
                    <a asp-controller="Home" asp-action="AuthorInfo" asp-route-id="@Model[l].AuthorId" class="btn btn-primary">Подробнее</a>
                </div>
            </div>
        }
    }

</div>
}
