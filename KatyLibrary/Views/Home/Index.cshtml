@{
    ViewData["Title"] = "Гдавная";
}
@{ 
    int a;
}
@model List<KatyLibrary.Models.Book>
@for (int i = 0; i < Model.Count() - 1; i = i + 4)
{
    <div class="row">
        @if(Model.Count() - 1 <= 3)
        {
            a = Model.Count() - 1;
        }
        else
        {
            a = i + 3;
        }
        @for (int l = i; l <= a; l++)
        {
            @if (Model[l] != null)
            {
                <div class="col-lg-3 col-sm-6 card">
                    <img class=".img-thumbnail img-fluid mx-auto d-block card-img-top" src="@Model[l].BookCover" />
                    <div class="card-body ">
                        <h4>@Model[l].Name</h4>
                        <h5>@Model[l].Author.Name</h5>
                        <a asp-controller="Home" asp-action="BookInfo" asp-route-id="@Model[l].BookId" class="btn btn-primary">Подробнее</a>
                    </div>
                </div>
            }
        }
    </div>
}

