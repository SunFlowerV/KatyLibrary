@model KatyLibrary.Models.Author
    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label for="name" asp-for="Name" class="sr-only">Полное имя:</label>
            <input type="text" id="name" asp-for="Name" class="form-control" placeholder="Полное имя" required="" autofocus="" />
        </div>
        <div class="form-group">
            <label for="biography" asp-for="Biography" class="sr-only">Биография:</label>
            <textarea id="biography" asp-for="Biography" class="form-control" placeholder="Биография" rows="7"></textarea>
        </div>
        <div class="form-group">
            <button class="btn btn-lg btn-primary" type="submit">Добавить</button>
        </div>

    </form>