@model IEnumerable<Genre>
@{
    ViewBag.Title = "Список жанров";
}

<a class="btn btn-success" asp-controller="Admin" asp-action="AddGenre">Добавить жанр</a>

<table class="table">
    <tr><th>Название</th><th></th></tr>
    @foreach (var genre in Model)
    {
        <tr>
            <td>@genre.Name</td>
            <td>
                <form asp-controller="Admin" asp-action="GenreDelete" asp-route-id="@genre.GenreId" method="post">
                    <a class="btn btn-sm btn-primary" asp-controller="Admin" asp-action="GenreEdit" asp-route-id="@genre.GenreId">Изменить</a>
                    <button type="submit" class="btn btn-sm btn-danger">
                        Удалить
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
