@model KatyLibrary.ViewModels.BookVirwModel
@{
    ViewBag.Title = "Редактирование книги";
}
<form method="post" enctype="multipart/form-data" asp-controller="Admin" asp-action="BookEdit">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input type="hidden" asp-for="Book.BookId" />
    </div>
    <div class="form-group">
        <label for="name" asp-for="Book.Name" class="sr-only">Название:</label>
        <input type="text" id="name" asp-for="Book.Name" class="form-control" placeholder="Название" required="" autofocus="" />
    </div>
    <div class="form-group">
        <label for="authprid" asp-for="Book.AuthorId" class="sr-only">Автор:</label>
        <select asp-for="Book.AuthorId" asp-items="ViewBag.Authors" class="form-control" id="authorid" placeholder="Автор" required=""></select>
    </div>
    <div class="form-group">
        <label for="yearofpubliching" asp-for="Book.YearOfPubliching" class="sr-only">Год издания:</label>
        <input type="number" id="yearofpubliching" asp-for="Book.YearOfPubliching" class="form-control" placeholder="Год издания" />
    </div>
    <div class="form-group">
        <label for="numberofpages" asp-for="Book.NumberOfPages" class="sr-only">Количество страниц:</label>
        <input type="number" id="numberofpages" asp-for="Book.NumberOfPages" class="form-control" placeholder="Количество страниц" />
    </div>
    <div class="form-group">
        <label for="annotation" asp-for="Book.Annotation" class="sr-only">Описание:</label>
        <textarea id="annotation" asp-for="Book.Annotation" class="form-control" placeholder="Описание" rows="7"></textarea>
    </div>
    <div class="form-group form-check">
        <label asp-for="Book.IsBestSeller" class="form-check-label">
            <input type="checkbox"  asp-for="Book.IsBestSeller" class="form-check-input">
            Бестселлер
        </label>
    </div>
    <div class="form-group">
        <label for="genreid" asp-for="GenreId" class="sr-only">Автор:</label>
        <select multiple="multiple" asp-for="GenreId" asp-items="ViewBag.Genres" class="form-control" id="genreid" placeholder="Автор" required=""></select>
    </div>

    <div class="form-group">
        <input type="file" class="form-control-file border" name="uploadedFile" />
    </div>
    <div class="form-group">
    <input type="hidden" asp-for="Book.BookCover" />
    </div>
    <div class="form-group">
        <button class="btn btn-lg btn-primary" type="submit">Сохранить</button>
    </div>

</form>
